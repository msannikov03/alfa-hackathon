# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=alfa_user
POSTGRES_PASSWORD=alfa_password_change_me  # Change this in production!
POSTGRES_DB=alfa_business
DATABASE_URL=postgresql://alfa_user:alfa_password_change_me@postgres:5432/alfa_business

# ========================================
# Security
# ========================================
JWT_SECRET=your_jwt_secret_key_here  # Generate with: openssl rand -hex 32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# LLM Configuration (LLM7.io)
# ========================================
# REQUIRED: Get FREE token from https://token.llm7.io
# LLM7.io provides free access to multiple AI models - completely free for competition use!
LLM7_API_KEY=your_llm7_api_key_here
LLM7_BASE_URL=https://api.llm7.io/v1
LLM7_MODEL=gpt-4o-mini

# ========================================
# Telegram Bot Configuration
# ========================================
# REQUIRED: Get from @BotFather on Telegram
# Steps: 1. Search @BotFather  2. Send /newbot  3. Follow instructions
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_NAME=Copilotus

# WebApp URL - Use localhost for development, your domain for production
# Local development: http://localhost:3000/tg-app
# Production (with Cloudflare): https://yourdomain.com/tg-app
TELEGRAM_WEBAPP_URL=http://localhost:3000/tg-app

# ========================================
# Autonomous Features
# ========================================
ENABLE_AUTONOMOUS_ACTIONS=true
MORNING_BRIEFING_TIME=06:00
DECISION_THRESHOLD_AMOUNT=10000  # Auto-approve actions under â‚½10,000

# ========================================
# Memory & Storage
# ========================================
CHROMADB_PATH=./chroma_data
MAX_CONTEXT_TOKENS=8000

# ========================================
# API URLs
# ========================================
# For local development, use localhost
# For production with Cloudflare Tunnel, use your domain
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

