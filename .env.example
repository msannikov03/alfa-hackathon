# Database
POSTGRES_USER=alfa_user
POSTGRES_PASSWORD=alfa_password_change_me
POSTGRES_DB=alfa_business
DATABASE_URL=postgresql://alfa_user:alfa_password_change_me@postgres:5432/alfa_business

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# REQUIRED: Get from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# REQUIRED: Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_NAME=Copilotus
TELEGRAM_WEBAPP_URL=http://localhost:3000/tg-app

# Autonomous Features
ENABLE_AUTONOMOUS_ACTIONS=true
MORNING_BRIEFING_TIME=06:00
DECISION_THRESHOLD_AMOUNT=10000

# Memory & Storage
CHROMADB_PATH=./chroma_data
MAX_CONTEXT_TOKENS=8000

# API URLs
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
